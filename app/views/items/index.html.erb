<input class="btn btn-link" type="button" id="new_item" value="New Item" />

<%= form_tag '/items', :id => 'item_form', :remote => true do %>
  <%= text_field_tag 'name' %>
  <%= submit_tag 'Create Item', :class => 'btn btn-primary' %>
  <% end %>

<ul id="items">
<% @items.each do |it| %>

    <li>

      <%= link_to it.name, item_path(it), :class => 'btn btn-link' %>
      <%= link_to "Upload a Photo!", edit_item_path(it) if !it.photo? %></li>


<% end %>
</ul>

<%= paginate @items %>